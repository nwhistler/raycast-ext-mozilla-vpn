{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mozilla-vpn",
  "title": "Mozilla Vpn Connect",
  "description": "Interact with the Mozilla Vpn from Raycast.",
  "icon": "MozillaVPN.png",
  "author": "natew",
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Vpn Connect",
      "subtitle": "Mozilla Vpn",
      "description": "Activate or deactivate the Mozilla Vpn.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.94.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "react-devtools": "^6.1.1",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "electron": "^33.2.1"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "prettier:format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'"
  }
}